<Window x:Class="LojaMusic.View.CadastrarInstrumento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CadastrarInstrumento" Height="300" Width="300">
    <Grid>
        <Label Content="Nome:" HorizontalAlignment="Left" Margin="33,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Preço:" HorizontalAlignment="Left" Margin="33,72,0,0" VerticalAlignment="Top"/>
        <Label Content="Categoria:" HorizontalAlignment="Left" Margin="11,103,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.558,3.565"/>
        <TextBox x:Name="txtInstNome" HorizontalAlignment="Left" Height="23" Margin="83,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199"/>
        <TextBox x:Name="txtInstPreco" HorizontalAlignment="Left" Height="23" Margin="83,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199"/>
        <Button x:Name="btnGravarInstrumento" Content="Gravar" HorizontalAlignment="Left" Margin="47,206,0,0" VerticalAlignment="Top" Width="207" Height="41" Click="btnGravarInstrumento_Click"/>
        <ComboBox x:Name="cboCategorias" HorizontalAlignment="Left" Margin="83,107,0,0" VerticalAlignment="Top" Width="199"/>

    </Grid>
</Window>
